<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".DevelopmentMenuActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/resolveTerminalStateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="端末状態のリゾルバ" />

        <Button
            android:id="@+id/resolveObservationSiteByGpsActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GPSを利用した観測地点のリゾルバ" />

        <Button
            android:id="@+id/resolveObservationSiteByManualActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="手動で観測地点を選択するリゾルバ" />

        <Button
            android:id="@+id/surfaceViewActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="サーフェースビューのサンプル" />

        <Button
            android:id="@+id/astronomicalTheaterActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="天体シアター・アクティビティ" />

    </LinearLayout>

</ScrollView>