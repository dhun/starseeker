<?xml version="1.0" encoding="utf-8"?>
<!-- 天体シアターアクティビティの機能パネル -->
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical" >

        <ZoomControls
            android:id="@+id/zoomControls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/switchShowSecondTheaterButton"
            style="@style/astronomical_theater_function"
            android:src="@drawable/selector_switch_show_second_theater_button" />

        <ImageButton
            android:id="@+id/chooseMagnitudeButton"
            style="@style/astronomical_theater_function"
            android:src="@android:drawable/star_big_on" />

        <ImageButton
            android:id="@+id/chooseTodayButton"
            style="@style/astronomical_theater_function"
            android:src="@android:drawable/ic_menu_today" />

        <ImageButton
            android:id="@+id/chooseLocationButton"
            style="@style/astronomical_theater_function"
            android:src="@android:drawable/ic_menu_myplaces" />

        <ImageButton
            android:id="@+id/settingsButton"
            style="@style/astronomical_theater_function"
            android:src="@android:drawable/ic_menu_preferences" />

        <ImageButton
            android:id="@+id/switchStarLocateIndicatorButton"
            style="@style/astronomical_theater_function"
            android:src="@android:drawable/ic_menu_directions" />

        <ImageButton
            android:id="@+id/switchLockDisplayRotateButton"
            style="@style/astronomical_theater_function"
            android:src="@android:drawable/ic_lock_idle_lock" />

        <ImageButton
            android:id="@+id/photographButton"
            style="@style/astronomical_theater_function"
            android:src="@android:drawable/ic_menu_camera" />

        <ImageButton
            android:id="@+id/imageButton2"
            style="@style/astronomical_theater_function"
            android:src="@android:drawable/ic_dialog_map" />
    </LinearLayout>

</HorizontalScrollView>